# -------------------------------
# Server Configuration
# -------------------------------
PORT=5002                    # البورت اللي هيشتغل عليه السيرفر
HOST=127.0.0.1               # عنوان السيرفر (لو شغال على localhost)

# -------------------------------
# Database Configuration
# -------------------------------
MONGO_URI=mongodb://localhost:27017/footechDB  # رابط الاتصال بقاعدة البيانات (تأكد من التعديل بحسب حالتك)

# -------------------------------
# API Keys (Third-Party Integrations)
# -------------------------------
API_KEY=your_api_key_here    # مفتاح الـ API لأي خدمة طرف ثالث
SECRET_KEY=your_secret_key   # المفتاح السري لتأمين البيانات

# -------------------------------
# Authentication Configuration
# -------------------------------
JWT_SECRET=your_jwt_secret_key       # المفتاح السري لتشفير الـ JWT Tokens
JWT_EXPIRES_IN=1d                   # مدة صلاحية الـ JWT (مثلاً يوم واحد)
COOKIE_SECRET=your_cookie_secret    # مفتاح تشفير الكوكيز

# -------------------------------
# Email Service Configuration
# -------------------------------
EMAIL_HOST=smtp.your_email_service.com   # مضيف البريد الإلكتروني (SMTP)
EMAIL_PORT=587                           # بورت SMTP (مثلاً 587 للإرسال الآمن)
EMAIL_USER=your_email@example.com        # إيميل الإرسال
EMAIL_PASSWORD=your_email_password       # كلمة السر للإيميل

# -------------------------------
# Application Settings
# -------------------------------
NODE_ENV=development         # بيئة العمل (development أو production)
LOG_LEVEL=info               # مستوى تسجيل الـ logs (debug, info, warn, error)
MAX_REQUEST_SIZE=1mb         # الحد الأقصى لحجم الطلبات

# -------------------------------
# Future Features
# -------------------------------
AI_API_URL=http://ai-service.local/api    # رابط API للذكاء الاصطناعي
STORAGE_BUCKET=my-app-storage             # اسم مكان تخزين الملفات
REDIS_HOST=localhost                      # مضيف Redis (مثال للتخزين المؤقت)
REDIS_PORT=6379                           # بورت Redis

# -------------------------------
# Other Configurations
# -------------------------------
DEBUG_MODE=true                # تفعيل أو تعطيل وضع الـ Debug
CORS_ALLOWED_ORIGINS=*         # السماح بجميع المصادر (أو تحديد نطاقات)
